<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/style.css" type="text/css">
</head>
<body>
    <div class="post_container">
        <div class="maxContainer">
            <div class="post">
                <h1>Post</h1>
                <p>this is the post: <%= post %></p>
            </div>
            <form action="/post/comment/new" method="post" class="commentFrom">
                <input name="username" type="text" required placeholder="enter name">
                <textarea name="comment" required cols="auto" rows="3"></textarea>
                <div>
                    <button>Add Comment</button>
                </div>
            </form>
            <section class="comments">
                <% comments.forEach(comment=>{%>
                    <div class="comment">
                        <div>
                            <h4><%= comment.username %></h4>
                            <span class="delete"><i class="fa-solid fa-trash-can"></i></span>
                            <a href="post/comment/edit/<%= comment.id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                        </div>
                        <p><%= comment.comment %></p>
                    </div>
                <%})%>
            </section>
            
        </div>
    </div>
</body>
</html>